<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="view_users_form_douyin" model="ir.ui.view">
        <field name="name">res.users.form.douyin</field>
        <field name="model">res.users</field>
        <field name="inherit_id" ref="base.view_users_form"/>
        <field name="arch" type="xml">
            <xpath expr="//page[@name='access_rights']" position="before">
                <page string="抖音认证">
                    <group>
                        <group>
                            <field name="douyin_open_id" readonly="1"/>
                            <field name="douyin_union_id" readonly="1"/>
                        </group>
                        <group>
                            <field name="douyin_nickname" readonly="1"/>
                            <field name="douyin_avatar" readonly="1" widget="url"/>
                        </group>
                    </group>
                    <field name="douyin_auth_ids" string="授权历史">
                        <list>
                            <field name="config_id"/>
                            <field name="open_id"/>
                            <field name="nickname"/>
                            <field name="status"/>
                            <field name="auth_time"/>
                        </list>
                    </field>
                </page>
            </xpath>
        </field>
    </record>
</odoo>