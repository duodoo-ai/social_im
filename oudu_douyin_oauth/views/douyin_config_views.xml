<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- 抖音配置列表视图 -->
    <record id="view_douyin_config_list" model="ir.ui.view">
        <field name="name">oudu.douyin.config.list</field>
        <field name="model">oudu.douyin.config</field>
        <field name="arch" type="xml">
            <list string="抖音配置">
                <field name="name"/>
                <field name="client_key"/>
                <field name="state"/>
                <field name="active"/>
                <field name="sequence" widget="handle"/>
            </list>
        </field>
    </record>

    <!-- 抖音配置表单视图 -->
    <record id="view_douyin_config_form" model="ir.ui.view">
        <field name="name">oudu.douyin.config.form</field>
        <field name="model">oudu.douyin.config</field>
        <field name="arch" type="xml">
            <form string="抖音配置">
                <header>
                    <field name="state" widget="statusbar" statusbar_visible="draft,tested,production"/>
                    <button name="action_test_connection" type="object" string="测试连接" class="btn-primary"/>
                </header>
                <sheet>
                    <group string="基本配置">
                        <group>
                            <field name="name" placeholder="例如：默认抖音配置"/>
                            <field name="sequence" placeholder="排序序号，数字越小越靠前"/>
                            <field name="active" string="激活配置"/>
                        </group>
                        <group>
                            <field name="client_key" placeholder="填写抖音开放平台提供的Client Key" required="1"/>
                            <field name="client_secret" password="True" placeholder="填写抖音开放平台提供的Client Secret" required="1"/>
                            <field name="company_id" options="{'no_create': True, 'no_create_edit': True}" invisible="1"/>
                        </group>
                    </group>

                    <group string="授权信息">
                        <group>
                            <field name="redirect_uri" readonly="1" placeholder="系统自动生成的回调地址"/>
                            <field name="scope"
                                   widget="radio"
                                   options="{'horizontal': false}"
                                   placeholder="授权权限范围，默认：user_info"/>
                            <field name="access_token" readonly="1" placeholder="抖音开放平台应用的Access Token"/>
<!--                            <field name="refresh_token" readonly="1" placeholder="抖音开放平台应用的Refresh Token"/>-->
<!--                            <field name="refresh_token_expires" readonly="1" placeholder="Refresh Token过期时间"/>-->
<!--                            <field name="access_scope" readonly="1" placeholder="抖音开放平台应用的Access Scope"/>-->
                        </group>
                    </group>

                    <group string="授权记录">
                        <field name="auth_ids" context="{'default_config_id': id}">
                            <list string="授权记录">
                                <field name="code" string="授权码"/>
                                <field name="open_id" string="OpenID"/>
                                <field name="nickname" string="用户昵称"/>
                                <field name="status" string="状态"/>
                                <field name="auth_time" string="授权时间"/>
                                <field name="user_id" string="关联用户"/>
                            </list>
                        </field>
                    </group>
                </sheet>
                <chatter/>
            </form>
        </field>
    </record>

    <!-- 抖音配置搜索视图 -->
    <record id="view_douyin_config_search" model="ir.ui.view">
        <field name="name">oudu.douyin.config.search</field>
        <field name="model">oudu.douyin.config</field>
        <field name="arch" type="xml">
            <search string="抖音配置搜索">
                <field name="name" string="配置名称"/>
                <field name="client_key" string="Client Key"/>
                <filter string="激活配置" name="active" domain="[('active','=',True)]"/>
                <filter string="草稿状态" name="draft" domain="[('state','=','draft')]"/>
                <filter string="已测试" name="tested" domain="[('state','=','tested')]"/>
                <filter string="生产环境" name="production" domain="[('state','=','production')]"/>
                <group expand="0" string="分组">
                    <filter string="按公司" name="company" context="{'group_by': 'company_id'}"/>
                </group>
            </search>
        </field>
    </record>

    <!-- 抖音配置动作 -->
    <record id="action_douyin_config" model="ir.actions.act_window">
        <field name="name">抖音配置管理</field>
        <field name="res_model">oudu.douyin.config</field>
        <field name="view_mode">list,form</field>
        <field name="domain">[]</field>
        <field name="context">{'search_default_active': 1}</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                暂无抖音配置
            </p>
            <p>
                点击创建按钮来添加新的抖音开放平台配置。
                您需要先在<a href="https://open.douyin.com/" target="_blank">抖音开放平台</a>创建应用，
                然后在此处填写对应的Client Key和Client Secret。
            </p>
        </field>
    </record>

    <!-- 抖音配置菜单 -->
    <menuitem id="menu_douyin_config"
              name="抖音配置"
              parent="base.menu_administration"
              action="action_douyin_config"
              sequence="700"
    />

    <!-- 抖音授权记录列表视图 -->
    <record id="view_douyin_auth_list" model="ir.ui.view">
        <field name="name">oudu.douyin.auth.list</field>
        <field name="model">oudu.douyin.auth</field>
        <field name="arch" type="xml">
            <list string="抖音授权记录">
                <field name="code" string="授权码"/>
                <field name="open_id" string="OpenID"/>
                <field name="nickname" string="用户昵称"/>
                <field name="status" string="状态"/>
                <field name="auth_time" string="授权时间"/>
                <field name="user_id" string="关联用户"/>
            </list>
        </field>
    </record>

    <!-- 抖音授权记录表单视图 -->
    <record id="view_douyin_auth_form" model="ir.ui.view">
        <field name="name">oudu.douyin.auth.form</field>
        <field name="model">oudu.douyin.auth</field>
        <field name="arch" type="xml">
            <form string="抖音授权记录">
                <header>
                    <button name="refresh_access_token" type="object" string="刷新Token" class="btn-primary"/>
                    <button name="get_user_info" type="object" string="同步用户信息"/>
                    <button name="action_revoke_auth" type="object" string="撤销授权" class="btn-danger"/>
                </header>
                <sheet>
                    <group string="基本信息">
                        <group>
                            <field name="code" readonly="1"/>
                            <field name="config_id" options="{'no_create': True, 'no_create_edit': True}"/>
                            <field name="status"/>
                        </group>
                        <group>
                            <field name="open_id" readonly="1"/>
                            <field name="union_id" readonly="1"/>
                            <field name="auth_time" readonly="1"/>
                        </group>
                    </group>

                    <group string="用户信息">
                        <group>
                            <field name="nickname" readonly="1"/>
                            <field name="avatar" readonly="1" widget="url"/>
                            <field name="gender" readonly="1"/>
                        </group>
                        <group>
                            <field name="country" readonly="1"/>
                            <field name="province" readonly="1"/>
                            <field name="city" readonly="1"/>
                        </group>
                    </group>

                    <group string="Token信息">
                        <field name="access_token" password="True"/>
                        <field name="refresh_token" password="True"/>
                        <field name="token_expires"/>
                        <field name="expires_in"/>
                    </group>

                    <group string="关联信息">
                        <field name="user_id" options="{'no_create': True, 'no_create_edit': True}"/>
                        <field name="partner_id" options="{'no_create': True, 'no_create_edit': True}"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <!-- 抖音授权记录搜索视图 -->
    <record id="view_douyin_auth_search" model="ir.ui.view">
        <field name="name">oudu.douyin.auth.search</field>
        <field name="model">oudu.douyin.auth</field>
        <field name="arch" type="xml">
            <search string="抖音授权记录搜索">
                <field name="open_id" string="OpenID"/>
                <field name="nickname" string="用户昵称"/>
                <field name="user_id" string="关联用户"/>
                <filter string="已授权" name="active" domain="[('status','=','active')]"/>
                <filter string="已过期" name="expired" domain="[('status','=','expired')]"/>
                <filter string="待授权" name="pending" domain="[('status','=','pending')]"/>
                <group expand="0" string="分组">
                    <filter string="按配置" name="config" context="{'group_by': 'config_id'}"/>
                    <filter string="按状态" name="status" context="{'group_by': 'status'}"/>
                </group>
            </search>
        </field>
    </record>

    <!-- 抖音授权记录动作 -->
    <record id="action_douyin_auth" model="ir.actions.act_window">
        <field name="name">抖音授权记录</field>
        <field name="res_model">oudu.douyin.auth</field>
        <field name="view_mode">list,form</field>
        <field name="domain">[]</field>
        <field name="context">{'search_default_active': 1}</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                暂无授权记录
            </p>
            <p>
                当用户通过抖音扫码登录后，授权记录将自动创建在这里。
            </p>
        </field>
    </record>

    <!-- 抖音授权记录菜单 -->
    <menuitem id="menu_douyin_auth"
              name="抖音授权记录"
              parent="base.menu_administration"
              action="action_douyin_auth"
              sequence="710"
    />
</odoo>
