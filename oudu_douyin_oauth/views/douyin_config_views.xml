<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="view_douyin_config_list" model="ir.ui.view">
        <field name="name">oudu.douyin.config.list</field>
        <field name="model">oudu.douyin.config</field>
        <field name="arch" type="xml">
            <list string="抖音配置">
                <field name="name"/>
                <field name="client_key"/>
                <field name="state"/>
                <field name="active"/>
            </list>
        </field>
    </record>

    <record id="view_douyin_config_form" model="ir.ui.view">
        <field name="name">oudu.douyin.config.form</field>
        <field name="model">oudu.douyin.config</field>
        <field name="arch" type="xml">
            <form string="抖音配置">
                <header>
                    <button name="action_test_connection" type="object" string="测试连接" class="btn-primary"/>
                    <field name="state" widget="statusbar" statusbar_visible="draft,tested,production"/>
                </header>
                <sheet>
                    <group>
                        <group>
                            <field name="name"/>
                            <field name="sequence"/>
                            <field name="active"/>
                            <field name="state"/>
                        </group>
                        <group>
                            <field name="client_key"/>
                            <field name="client_secret" password="True"/>
                            <field name="redirect_uri"/>
                        </group>
                    </group>
                    <group string="API配置">
                        <field name="api_base_url"/>
                        <field name="auth_url"/>
                        <field name="token_url"/>
                        <field name="refresh_token_url"/>
                        <field name="client_token_url"/>
                    </group>
                    <group string="Token信息" invisible="state != 'draft'">
                        <field name="client_token" readonly="1"/>
                        <field name="client_token_expires" readonly="1"/>
                        <field name="stable_client_token" readonly="1"/>
                    </group>
                    <group string="授权记录" invisible="id == False">
                        <field name="auth_ids" context="{'default_config_id': id}">
                            <list>
                                <field name="code"/>
                                <field name="open_id"/>
                                <field name="nickname"/>
                                <field name="status"/>
                                <field name="auth_time"/>
                            </list>
                        </field>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <record id="view_douyin_config_search" model="ir.ui.view">
        <field name="name">oudu.douyin.config.search</field>
        <field name="model">oudu.douyin.config</field>
        <field name="arch" type="xml">
            <search string="抖音配置搜索">
                <field name="name"/>
                <field name="client_key"/>
                <filter string="激活" name="active" domain="[('active','=',True)]"/>
            </search>
        </field>
    </record>

    <!-- 动作和菜单 -->
    <record id="action_douyin_config" model="ir.actions.act_window">
        <field name="name">抖音配置</field>
        <field name="res_model">oudu.douyin.config</field>
        <field name="view_mode">list,form</field>
        <field name="domain">[]</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                暂无抖音配置，点击创建新的配置。
            </p>
        </field>
    </record>

    <menuitem id="menu_douyin_config"
              name="抖音配置"
              parent="base.menu_administration"
              action="action_douyin_config"
              sequence="701"
    />
</odoo>