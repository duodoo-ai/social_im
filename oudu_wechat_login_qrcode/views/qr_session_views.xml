<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <!-- 二维码会话列表视图 -->
    <record id="view_wechat_qr_session_tree" model="ir.ui.view">
        <field name="name">wechat.qr.session.tree</field>
        <field name="model">wechat.qr.session</field>
        <field name="arch" type="xml">
            <list string="微信二维码会话">
                <field name="name" string="会话ID"/>
                <field name="state" string="状态"/>
                <field name="user_id" string="关联用户"/>
                <field name="create_date" string="创建时间"/>
                <field name="expire_date" string="过期时间"/>
            </list>
        </field>
    </record>

    <!-- 二维码会话表单视图 -->
    <record id="view_wechat_qr_session_form" model="ir.ui.view">
        <field name="name">wechat.qr.session.form</field>
        <field name="model">wechat.qr.session</field>
        <field name="arch" type="xml">
            <form string="微信二维码会话详情">
                <header>
                    <button name="mark_canceled" type="object" string="取消会话"
                            class="oe_highlight" invisible="[('state', 'in', ['pending', 'scanned'])]"/>
                    <field name="state" widget="statusbar" statusbar_visible="pending,scanned,confirmed,expired,canceled"/>
                </header>
                <sheet>
                    <group>
                        <group>
                            <field name="name" readonly="1"/>
                            <field name="state" readonly="1" invisible="1"/>
                        </group>
                        <group>
                            <field name="user_id"/>
                        </group>
                    </group>
                    <group>
                        <group>
                            <field name="create_date" readonly="1"/>
                            <field name="expire_date" readonly="1"/>
                        </group>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <!-- 二维码会话搜索视图 -->
    <record id="view_wechat_qr_session_search" model="ir.ui.view">
        <field name="name">wechat.qr.session.search</field>
        <field name="model">wechat.qr.session</field>
        <field name="arch" type="xml">
            <search string="微信二维码会话搜索">
                <field name="name"/>
                <field name="user_id"/>
                <filter string="待扫描" name="pending" domain="[('state','=','pending')]"/>
                <filter string="已扫描" name="scanned" domain="[('state','=','scanned')]"/>
                <filter string="已确认" name="confirmed" domain="[('state','=','confirmed')]"/>
                <filter string="已过期" name="expired" domain="[('state','=','expired')]"/>
                <filter string="已取消" name="canceled" domain="[('state','=','canceled')]"/>
                <filter string="今天创建" name="today" domain="[('create_date','>=',context_today().strftime('%Y-%m-%d 00:00:00'))]"/>
            </search>
        </field>
    </record>

    <!-- 二维码会话窗口动作 -->
    <record id="action_wechat_qr_session" model="ir.actions.act_window">
        <field name="name">微信二维码会话</field>
        <field name="res_model">wechat.qr.session</field>
        <field name="view_mode">list,form</field>
        <field name="view_id" ref="view_wechat_qr_session_tree"/>
        <field name="search_view_id" ref="view_wechat_qr_session_search"/>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                管理微信二维码登录会话
            </p>
        </field>
    </record>

    <!-- 二维码会话菜单项 -->
    <menuitem id="menu_wechat_qr_session"
              name="微信二维码会话"
              parent="base.menu_administration"
              action="action_wechat_qr_session"
              sequence="600"/>
</odoo>