<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data noupdate="1">
        <!-- 微信消息记录访问规则 -->
        <record id="wechat_message_group_user" model="ir.rule">
            <field name="name">微信消息记录：用户只能查看自己创建的消息</field>
            <field name="model_id" ref="model_wechat_message"/>
            <field name="domain_force">
                [('create_uid', '=', user.id)]
            </field>
            <field name="groups" eval="[(4, ref('base.group_user'))]"/>
        </record>

        <record id="wechat_message_group_manager" model="ir.rule">
            <field name="name">微信消息记录：管理员可以查看所有消息</field>
            <field name="model_id" ref="model_wechat_message"/>
            <field name="domain_force">[(1, '=', 1)]</field>
            <field name="groups" eval="[(4, ref('base.group_system'))]"/>
        </record>

        <!-- 用户消息记录访问规则 -->
        <record id="wechat_user_message_rule" model="ir.rule">
            <field name="name">用户消息记录：用户只能查看自己的记录</field>
            <field name="model_id" ref="model_wechat_user_message"/>
            <field name="domain_force">[('user_id', '=', user.id)]</field>
            <field name="groups" eval="[(4, ref('base.group_user')), (4, ref('base.group_portal'))]"/>
        </record>

        <record id="wechat_user_message_manager_rule" model="ir.rule">
            <field name="name">用户消息记录：管理员可以查看所有记录</field>
            <field name="model_id" ref="model_wechat_user_message"/>
            <field name="domain_force">[(1, '=', 1)]</field>
            <field name="groups" eval="[(4, ref('base.group_system'))]"/>
        </record>
    </data>
</odoo>